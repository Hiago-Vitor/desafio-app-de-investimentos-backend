{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Exchange App",
    "description": ""
  },
  "host": "http://localhost:3000",
  "basePath": "/",
  "schemes": [
    "http", "https"
  ],      
  "paths": {
    "/login": {
      "post": {
        "tags": [
          "Login"
        ],
        "description": "Login do cliente",
        "requestBody": {
          "description": "Dados necessarios para login",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/requesLogin"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Em caso de sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/responseLogin"
                }
              }
            }
          },
          "401": {
            "description": "Em caso de n√£o autorizado"
          }
        }
      }
    },
    "/account/deposit": {
      "put": {
        "description": "Realiza novo deposito na conta do cliente",
        "parameters": [],
        "requestBody": {
          "description": "Valor do deposito",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "value": {
                    "type": "number",
                    "example": 100
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "security": [
          {
            "bearer": []
          }
        ]
      }
    },
    "/account/withdraw": {
      "put": {
        "description": "",
        "parameters": [],
        "responses": {
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/account": {
      "get": {
        "description": "",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "security": [
          {
            "bearer": [ ]
          }
        ]
      }
    },
    "/investiments/buy": {
      "post": {
        "description": "",
        "parameters": [],
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      }
    },
    "/investiments/sell": {
      "post": {
        "description": "",
        "parameters": [],
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      }
    },
    "/assets/client": {
      "get": {
        "description": "",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/assets/{id}": {
      "get": {
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/exchange": {
      "get": {
        "description": "",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "requesLogin": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "test@test.com"
          },
          "password": {
            "type": "string",
            "example": "password"
          }
        }
      },
      "responseLogin": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZENsaWVudCI6MSwibmFtZSI6InRlc3RlIiwiZW1haWwiOiJ0ZXN0QHRlc3QuY29tIiwiaWF0IjoxNjU4Njg5MjczLCJleHAiOjE2NTg2OTAxNzN9.ojwYvZdQ2TkbEmXr9TcBQd24auVYIp37sqmcKzYhvbE"
          }
        }
      }
    },
    "securitySchemes": {
      "bearer": {
        "type": "http",
        "description": "JWT Authorization header using the Bearer scheme. Example: Authorization: eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}